<Page
    x:Class="Medias.Page1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Medias"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <CaptureElement x:Name="cePreview" Stretch="Uniform" />
        <CommandBar>
            <AppBarButton Icon="Camera" Label="Prendre une photo" Click="TakePhoto_Click" />
            <AppBarSeparator />
            <AppBarToggleButton Icon="Video" x:Name="btnStartVideo" Label="Prendre une video" Click="StartVideo_Click" />
            <AppBarToggleButton Icon="Pause" x:Name="btnPause" Label="Pause" Visibility="Collapsed" Click="PauseVideo_Click" />
            <AppBarSeparator />
            <AppBarToggleButton Icon="Microphone" x:Name="btnRecordAudio" Label="Enregistrer un son" Click="RecordSound_Click" />
        </CommandBar>
    </Grid>
</Page>
